# Deployment environment variables for Replit
# These help resolve permission issues and build problems

# Disable package layer caching to avoid permission issues
REPLIT_DISABLE_PACKAGE_LAYER_CACHING=1

# Preserve development dependencies needed for build
REPLIT_PRESERVE_DEVDEPS=1

# Production environment
NODE_ENV=production

# Disable autoscaling during build if needed
REPLIT_DISABLE_AUTOSCALING=0

# Build optimization
VITE_BUILD_ROLLUP_OUTPUTS=dist